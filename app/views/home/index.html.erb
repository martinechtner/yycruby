<%= render 'layouts/shared/page_header',
           { heading: 'YYC.rb',
             sub_heading: 'Calgary Ruby User Group',
             description: 'We meet once a month to code, do talks and meet others doing Ruby development in the Calgary area.' } %>

<div class="row">
  <div class="col-md-6">

      <div class="card border border-dark past-meetups">
        <div class="card-header bg-dark text-white">
          Announcements
        </div>
        <div class="card-body">
          <%= render template: 'news/show' %>
        </div>
      </div>

    <%= render 'events/next_meetup' %>

    <div class="card border border-dark past-meetups">
      <div class="card-header bg-dark text-white">
        Past Meetups
      </div>
      <div class="card-body">
        <%= render 'events/past_meetups' %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <%= render 'locations/location' %>
  </div>
</div>
