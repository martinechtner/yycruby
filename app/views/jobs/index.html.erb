<%= render 'layouts/shared/page_header',
           { heading: 'Job Board',
             sub_heading: 'Ruby/Rails opportunities in Calgary',
             description: 'Alphabetical Order (keeping it civil)' } %>

<% if user_signed_in? %>
  <%= link_to 'New Job', new_job_path %>
<% end %>

<% @jobs.each do |job| %>
  <div class="well">
    <%= link_to image_tag(job.logo(:thumb)), job.company_career_url %>
    <h2>
      <%= link_to job.company, job.company_career_url %>
      <small><%= job.title %></small>
    </h2>

    <%= simple_format job.description %>

    <%= link_to 'Check out the job posting here', job.posting_url %>

    <% if user_signed_in? %>
      <div class="row">
        <div class="col-md-12">
          <%= link_to 'Edit', edit_job_path(job) %> |
          <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>

  <hr/>
<% end %>

